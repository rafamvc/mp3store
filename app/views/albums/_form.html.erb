<%= simple_form_for @album do |f| %>
    <%= f.error_messages %> 
    <%= f.input :name %>
    <%= f.input :released_at %>
    <%= f.association :artists, :as => :check_boxes %>
    
    <h3>Songs: </h3>
    <%= f.simple_fields_for :musics do |fmusic| %>
    
    <%= render 'music_fields', :f => fmusic %>
      <hr>
    <%end %>
    
    <p><%= link_to_add_fields "Add Music", f, :musics %></p>
    
    <%= f.submit 'Save' %>
<% end %>


